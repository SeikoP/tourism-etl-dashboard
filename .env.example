# Core Environment Variables
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=sqlite:///./airflow.db
AIRFLOW__CORE__DAGS_FOLDER=/opt/airflow/dags
AIRFLOW__CORE__BASE_LOG_FOLDER=/opt/airflow/logs
AIRFLOW__CORE__PLUGINS_FOLDER=/opt/airflow/plugins

# Security
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here_replace_with_actual_key
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here_replace_with_actual_key

# Webserver Configuration
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=True
AIRFLOW__WEBSERVER__RBAC=True
AIRFLOW__WEBSERVER__AUTHENTICATE=True
AIRFLOW__WEBSERVER__AUTH_BACKEND=airflow.contrib.auth.backends.password_auth

# Performance Settings
AIRFLOW__CORE__PARALLELISM=32
AIRFLOW__CORE__MAX_ACTIVE_TASKS_PER_DAG=16
AIRFLOW__CORE__MAX_ACTIVE_RUNS_PER_DAG=16

# Logging
AIRFLOW__LOGGING__LOGGING_LEVEL=INFO
AIRFLOW__LOGGING__FAB_LOGGING_LEVEL=WARN

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Data Pipeline Settings
EXTRACTION_RATE_LIMIT_DELAY=1.0
EXTRACTION_MAX_RETRIES=3
EXTRACTION_TIMEOUT=30

# Data Storage
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed

# Docker Settings
COMPOSE_PROJECT_NAME=tourismflow